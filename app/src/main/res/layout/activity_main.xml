<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/scrollView5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/gps_satellites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_satellites"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/last_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_location"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/locations_scanned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/locations_scanned"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cells_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cells_visible"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cells_scanned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cells_scanned"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/visible_wifi_access_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visible_wifi_access_points"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/wifi_access_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_access_points"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/last_upload_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_upload_time"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/reports_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reports_sent"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/scrollView5"
        android:layout_alignLeft="@+id/scrollView5"
        android:layout_alignStart="@+id/scrollView5">
        <ToggleButton
            android:id="@+id/toggle_scanning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onToggleScanningClicked"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textOff="@string/start_scanning"
            android:textOn="@string/stop_scanning"
            android:layout_gravity="center"
            android:paddingBottom="12dp" />
    </FrameLayout>
</RelativeLayout>
