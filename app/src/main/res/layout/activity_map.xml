<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity" >
    <org.osmdroid.views.MapView
                 android:id="@+id/map"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
     />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#50000000">
        <ImageView
            android:id="@+id/fix_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gps"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/fix_indicator"
            >
            <TextView
                android:id="@+id/satellites_used"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/satellites_visible"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/latitude_text"
                android:textColor="@android:color/white"
                android:text="0.0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/longitude_text"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/cell_info_text"
            android:textColor="@android:color/white"
            android:text="Cells:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/wifi_info_text"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:text="Wifi:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="5px"
        android:layout_height="5px"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <ImageButton
        android:id="@+id/my_location_button"
        android:background="@drawable/ic_mylocation_android_assets"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_above="@+id/space"
        android:layout_toRightOf="@+id/space"
        android:layout_toEndOf="@+id/space"

       />
    <TextView
        android:id="@+id/copyright_area"
        android:textColor="@android:color/darker_gray"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/space"
        android:layout_alignParentRight="true"
        android:padding="5dp" />
</RelativeLayout>
