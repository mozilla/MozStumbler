<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.mapboxsdk.views.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapid="@string/map_id" />

    <fragment
        android:id="@+id/today_overlay_fragment"
        class="org.mozilla.mozstumbler.client.fragments.map.TodayOverlayFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/today_score_fragment_height"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/map_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/today_overlay_fragment"
        android:layout_marginTop="-10dp"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/zoom_to_self_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/today_overlay_fragment"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:background="@drawable/geolocation"/>

</RelativeLayout>