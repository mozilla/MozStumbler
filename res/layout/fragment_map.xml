<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.mapboxsdk.views.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapid="@string/map_id"/>

    <fragment
        class="org.mozilla.mozstumbler.client.fragments.map.TodayOverlayFragment"
        android:id="@+id/today_overlay_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/today_score_fragment_height"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/map_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-10dp"
        android:layout_below="@id/today_overlay_fragment"
        android:layout_above="@id/developer_overlay_fragment"
        android:orientation="vertical">
    </LinearLayout>
    
    <fragment
        class="org.mozilla.mozstumbler.client.developers.DeveloperOverlayFragment"
        android:id="@+id/developer_overlay_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/today_score_fragment_height"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>